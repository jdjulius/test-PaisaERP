{
  "name": "test-paisaerp-roadmap",
  "version": "1.0.0",
  "description": "Proyecto de automatización de pruebas para Roadmap.sh usando Playwright y POM",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:parallel": "playwright test --workers=4",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=webkit",
    "test:mobile": "playwright test --project=mobile",
    "test:api": "playwright test --project=api-tests",
    "test:dev": "cross-env NODE_ENV=development playwright test --headed",
    "test:dev:debug": "cross-env NODE_ENV=development playwright test --debug",
    "test:ci": "cross-env CI=true playwright test",
    "test:ci:full": "cross-env CI=true FULL_CI=true playwright test",
    "test:home": "playwright test home.spec.ts",
    "test:home:headed": "playwright test home.spec.ts --headed",
    "test:home:debug": "playwright test home.spec.ts --debug",
    "test:data-analyst": "playwright test data-analyst.spec.ts",
    "test:data-analyst:headed": "playwright test data-analyst.spec.ts --headed",
    "test:data-analyst:debug": "playwright test data-analyst.spec.ts --debug",
    "test:login": "playwright test login.spec.ts",
    "test:login:headed": "playwright test login.spec.ts --headed",
    "test:login:debug": "playwright test login.spec.ts --debug",
    "test:flow": "playwright test tests/flows/complete-flow.spec.ts",
    "test:flow:headed": "playwright test tests/flows/complete-flow.spec.ts --headed",
    "test:flow:debug": "playwright test tests/flows/complete-flow.spec.ts --debug",
    "test:flows": "playwright test tests/flows/",
    "test:flows:headed": "playwright test tests/flows/ --headed",
    "test:flows:debug": "playwright test tests/flows/ --debug",
    "test:flow:quick": "playwright test tests/flows/quick-navigation.spec.ts",
    "test:flow:quick:headed": "playwright test tests/flows/quick-navigation.spec.ts --headed",
    "test:flow:visual": "playwright test tests/flows/visual-validation.spec.ts",
    "test:flow:visual:headed": "playwright test tests/flows/visual-validation.spec.ts --headed",
    "test:flow:error": "playwright test tests/flows/error-handling.spec.ts",
    "test:flow:error:headed": "playwright test tests/flows/error-handling.spec.ts --headed",
    "test:google": "cross-env TEST_TYPE=google playwright test",
    "test:google:headed": "cross-env TEST_TYPE=google playwright test --headed",
    "test:google:debug": "cross-env TEST_TYPE=google playwright test --debug",
    "test:google:chrome": "cross-env TEST_TYPE=google playwright test --project=chromium",
    "test:google:firefox": "cross-env TEST_TYPE=google playwright test --project=firefox",
    "test:google:mobile": "cross-env TEST_TYPE=google playwright test --project=mobile",
    "install:browsers": "playwright install",
    "install:deps": "playwright install-deps",
    "codegen": "playwright codegen",
    "lint": "eslint tests/ --ext .ts,.js",
    "lint:fix": "eslint tests/ --ext .ts,.js --fix",
    "format": "prettier --write \"tests/**/*.{ts,js,json}\"",
    "clean": "rimraf test-results coverage",
    "start": "echo 'Servidor de desarrollo - implementar según ERP'"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "roadmap",
    "page-object-model",
    "typescript",
    "e2e"
  ],
  "author": "Equipo de QA",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "csv-parser": "^3.0.0",
    "dotenv": "^16.0.0",
    "winston": "^3.0.0"
  }
}
